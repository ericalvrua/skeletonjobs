            href="{{ path('usuarios_show', {'id': ofertas.usuarios.id})}}">Detalles usuario</a><br><br>

        <a style="margin-right: 3%; width:95%" class="button primary" class="button primary"
            href="{{ path('usuarios_crearCorreo', {'idUsuario': ofertas.usuarios.id, 'idOferta': ofertas.ofertas.id}) }}">Enviar
            correo</a><br><br>

        <a style="margin-right: 3%; width:95%" class="button primary" class="button primary"
            href="{{ path('empresas_respuestas', {'idUsuario': ofertas.usuarios.id, 'idOferta': ofertas.ofertas.id}) }}">Ver
            respuestas</a><br><br>

        <a style="margin-right: 3%; width:95%" class="button primary" class="button primary"
            href="{{ path('empresas_descartar', {'idUsuario': ofertas.usuarios.id, 'idOferta': ofertas.ofertas.id}) }}">Descartar
            Usuario</a><br><br>

        {% endif %}
    </div><br>
